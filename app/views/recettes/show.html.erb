<h1>Mes Recettes</h1>
<% @recettes.each do |r| %>
    <h2> <%= r.titre %> </h1>
    <b>Étapes:</b> <%= r.etapes %> <br />
    <b>Ingrédients:</b> 
    <% r.ingredients.each do |i| %> 
        <%= i.recette_ingredients[0].quantite.to_s + i.recette_ingredients[0].unite + " " + i.nom + ", " %>
        <br />
    <% end %>
<% end %>
