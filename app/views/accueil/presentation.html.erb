<h1 style="font-size:50px">Page d'accueil</h1>

<b style="font-size:25px">Liste des Recettes: </b> <br />
<ul>
    <% @recettes.each do |r| %>
        <li>
            <%= r.titre %><br/>
            <%= link_to 'lien html', "/recettes/#{r.id}" %><br />
            <%= link_to 'lien json', "/recettes/#{r.id}.json" %><br />
            <%= link_to 'lien xml', "/recettes/#{r.id}.xml" %><br />
        </li>
    <% end %>
</ul>
